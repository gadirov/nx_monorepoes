{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
     "types": ["node", "stripe-v3", "vite/client"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@react-monorepo/TTQ": ["libs/TTQ/src/index.ts"],
      "@react-monorepo/admissionplan": ["libs/admissionplan/src/index.ts"],
      "@react-monorepo/config": ["libs/shared/config"],
      "@react-monorepo/journals": ["libs/journals/src/index.ts"],
      "@react-monorepo/ui": ["libs/shared/ui/src/index.ts"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
